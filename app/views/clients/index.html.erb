<% content_for :title do %>Client details<% end %> 
	
	
<h1>Listing clients</h1>

<table>
  <tr>
    <th>Surname</th>
    <th>Forename</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Mobile</th>
    <th>Company</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%=h client.surname %></td>
    <td><%=h client.forename %></td>
    <td><%=h client.email %></td>
    <td><%=h client.phone %></td>
    <td><%=h client.mobile %></td>
    <td><%=h client.company.name %></td>
    <td><%= link_to 'Show', client %></td>
    <td><%= link_to 'Edit', edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New client', new_client_path %>